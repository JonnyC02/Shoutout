{
    "compilerOptions": {
        "target": "ESNext",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "module": "ESNext",
        "jsx": "react",
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}